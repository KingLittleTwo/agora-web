@import "./variables.styl"
.container
  width 80%
  margin 0 auto
  max-width 1200px

.hands
  cursor pointer

.card
  background #ffffff
  margin-bottom 10px
  padding 30px 20px
  
.left
  float left
.right
  float right

.cl
  zoom 1
.cl:after
  content ""
  display block
  height 0
  clear both
  overflow hidden
  visibility hidden

// 斜线
.backslash
  color $backslash
  padding 0 10px

// ========================== color beigin======================= 
.iconfont
  color #78909C
  padding: 0 5px
.main-font-color
  color $main-color
.font-info
  color #5d5d5d
.font-success
  color #33CC33
.font-danger
  color #FF4500
.font-primary
  color #1E90FF
.font-note
  color #828282
  font-size: 12px

// ========================== color end =========================
  
// ========================== button beigin========================
.btn
  padding 5px 15px
  border none
  border-radius 3px
  cursor pointer
.btn-info
  color #ffffff
  background #78909C
.btn-success
  color #ffffff
  background #33CC33
.btn-danger
  color #ffffff
  background #FF4500
.btn-primary
  color #ffffff
  background #1E90FF
.btn-note
  color #ffffff
  background #9a9a9a

// ========================== button end =========================

// ========================== form beigin========================
.form-group
  display inline-block
  height 35px
  .form-control
    height 100%
    border 1px solid $form-color
    border-radius 3px
    outline none
    padding 0 10px
    margin 0 20px
  .form-control:focus
    border-color $main-color
    box-shadow 0 0 5px $main-color

.form-no-border-group
  display inline-block
  height 35px
  .form-control
    height 100%
    border none
    border-bottom 1px solid #dadada
    outline none
    padding 0 10px
    margin 0 20px
  .form-controlfocus
    border-bottom 2px solid $main-color


// ========================== form end ==========================
